<%- include('../partials/header') %>
  <h2>Lista de Usuários</h2>
  <a href="/usuarios/novo" class="btn-novo">Novo Usuário</a>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(usuario => { %>
        <tr>
          <td><%= usuario.id %></td>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td>
            <a href="/usuarios/<%= usuario.id %>" class="btn-detalhes">Detalhes</a>
            <form action="/usuarios/<%= usuario.id %>?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn-excluir">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<%- include('../partials/footer') %>